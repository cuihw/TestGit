<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="@drawable/home_select_list_style" >

        <LinearLayout
            android:id="@+id/contract_list_item_image_layout"
            android:layout_width="50dip"
            android:layout_height="50dip"
            android:layout_alignParentLeft="true"
            android:background="@drawable/background_login"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dip" >

            <ImageView
                android:id="@+id/contract_list_item_imageview"
                android:layout_width="40dip"
                android:layout_height="40dip"
                android:layout_margin="5dp"
                android:background="@drawable/background_rectangle"
                android:layout_marginLeft="5dip"
                android:src="@drawable/black_bird" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dip"
            android:layout_toRightOf="@id/contract_list_item_image_layout"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/contract_list_item_name_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:text="@string/friend_name"
                android:textColor="@android:color/secondary_text_light"
                android:textSize="18sp"
                android:textStyle="bold" />
        </LinearLayout>

        <ImageView
            android:layout_width="6dip"
            android:layout_height="12dip"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dip"
            android:src="@drawable/home_index_arrow" />
    </RelativeLayout>

</LinearLayout>